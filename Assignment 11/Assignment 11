#include <iostream>
#include <string>
using namespace std;

int main()
{
    int num1 = 0;
    int num2 = 0;
    int gcd = 0;
    
    while (num1<=0 || num2<=0)
    {
        cout << "Enter 1st number: ";
        cin >> num1;
    
        cout << "Enter 2nd number: ";
        cin >> num2;
        
        if (num1<=0 || num2<=0)
        {
            cout << "Please enter only positive numbers.\n";
        }
    }
    
    for(int i=1; i<=num1 && i<=num2; i++)
    {
        if(num1%i==0 && num2%i==0)
        {
            gcd = i;
        }
    }
    
    cout << "The GCD of " << num1 << " and " << num2 << " is " << gcd << ".\n\n";

    return 0;
}
